{
  "name": "happy-sift",
  "display-name": "Happy Sift",
  "description": "",
  "author": "",
  "version": "1.15.1",
  "icon": "assets/blueprint.svg",
  "interfaces": {
    "email": {
      "thread" : {
        "controller": "dist/js/controller.umd-es2015.js"
      },
      "client" : {
        "controller": "dist/js/email-client-controller.umd-es2015.js"
      }
    },
    "summary": {
      "controller": "dist/js/controller.umd-es2015.js"
    }
  },
  "dag": {
    "inputs":{
      "emails": {
        "gmailEmails":{
          "filter":{
            "conditions":[{
              "date": "between now and 1 week before now"
            }]
          },
          "wants": [
            "archive",
            "textBody",
            "strippedHtmlBody"
          ],
          "inMailbox": "Important"
        }
      }
    },
    "nodes":[{
      "#": "First Node",
      "input": {
        "bucket": "gmailEmails"
      },
      "implementation": {
        "javascript": "server/node1.js"
      },
      "outputs": {
        "scores": {},
        "emotions": {}
      }
    }, {
      "#": "Thread Node",
      "input": {
        "bucket": "scores",
        "select": "/*"
      },
      "implementation": {
        "javascript": "server/node2.js"
      },
      "outputs": {
        "threads": {}
      }
    }, {
      "#": "Emotion Node",
      "input": {
        "bucket": "emotions",
        "select": "/*"
      },
      "implementation": {
        "javascript": "server/node3.js"
      },
      "outputs": {
        "positive": {},
        "negative": {}
      }
    }],
    "stores":{
      "scores" : {
        "key$schema":"string/string"
      },
      "emotions" : {
        "key$schema":"string/string"
      }
    },
    "outputs":{
      "exports": {
        "threads": {
          "import": "_email.tid"
        },
        "positive" : {
          "key$schema":"string"
        },
        "negative" : {
          "key$schema":"string"
        }
      }
    }
  }
}
